.userBox {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 20px;
	background: -webkit-linear-gradient(bottom left, #63b8ff 0%, #4876ff 25%, #3a5fcd 100%);
	background: linear-gradient(to top right, #63b8ff 0%, #4876ff 25%, #3a5fcd 100%);
}
/* 用户昵称 */
.nickName {
	color: #ffffff;
}
/* 用户头像 */
.userIcon {
	-webkit-align-self: flex-end;
	        align-self: flex-end;
	border-radius: 50%;
	overflow: hidden;
	width: 100px;
	height: 100px;
	box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5)
}

